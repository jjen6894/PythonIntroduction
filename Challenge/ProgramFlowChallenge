ip_address = input("What is your IP address? ")
segment = 1
segment_length = 0

if ip_address[-1] != '.':
    ip_address += '.'

for character in ip_address:
    if character == '.':
        print("segment {} contains {} characters".format(segment, segment_length))
        segment += 1
        segment_length = 0
    else:
        segment_length += 1


